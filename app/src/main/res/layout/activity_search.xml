<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@color/youtube_background_black"
     android:fitsSystemWindows="true">

    <LinearLayout
         android:layout_height="@dimen/bottom_nav_height"
         android:layout_width="match_parent"
         android:paddingEnd="@dimen/icon_padding_small"
         android:gravity="center_vertical"
         android:background="@color/youtube_background_black"
         android:orientation="horizontal"
         android:paddingStart="@dimen/icon_padding_small"
         android:id="@+id/topBar">

        <ImageButton
             android:layout_height="@dimen/icon_touch_target"
             android:layout_width="@dimen/icon_touch_target"
             android:src="@drawable/ic_arrow_back"
             android:contentDescription="@string/back"
             android:background="?attr/selectableItemBackgroundBorderless"
             android:tint="@color/white"
             android:id="@+id/btnBack" />

        <androidx.cardview.widget.CardView
             android:layout_height="@dimen/icon_size_xlarge"
             android:layout_width="0dp"
             android:layout_marginEnd="@dimen/icon_padding_small"
             app:cardElevation="0dp"
             app:cardBackgroundColor="@color/youtube_chip_background"
             android:layout_marginStart="@dimen/icon_padding_small"
             app:cardCornerRadius="@dimen/redius_xmedium"
             android:layout_weight="1">

            <RelativeLayout
                 android:layout_height="match_parent"
                 android:layout_width="match_parent">

                <EditText
                     android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     android:layout_toStartOf="@+id/btnClearSearch"
                     android:imeOptions="actionSearch"
                     android:textColor="@color/white"
                     android:singleLine="true"
                     android:paddingStart="@dimen/icon_padding_xlarge"
                     android:paddingEnd="@dimen/icon_padding_small"
                     android:background="@android:color/transparent"
                     android:hint="@string/search_youtube"
                     android:textColorHint="@color/youtube_text_secondary"
                     android:layout_alignParentStart="true"
                     android:inputType="text"
                     android:id="@+id/searchEditText" />

                <ImageButton
                     android:layout_height="@dimen/icon_size_xlarge"
                     android:layout_width="@dimen/icon_size_xlarge"
                     android:visibility="gone"
                     android:src="@android:drawable/ic_menu_close_clear_cancel"
                     android:contentDescription="Clear"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     android:layout_alignParentEnd="true"
                     android:tint="@color/youtube_text_secondary"
                     android:id="@+id/btnClearSearch" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <ImageButton
             android:layout_height="@dimen/icon_touch_target"
             android:layout_width="@dimen/icon_touch_target"
             android:src="@drawable/ic_mic"
             android:contentDescription="Voice Search"
             android:background="?attr/selectableItemBackgroundBorderless"
             android:tint="@color/white"
             android:id="@+id/btnMic" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:layout_below="@id/topBar"
         android:id="@+id/searchHistoryRecyclerView" />

</RelativeLayout>