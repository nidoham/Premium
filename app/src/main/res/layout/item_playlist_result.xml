<?xml version="1.0" encoding="UTF-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <!-- Playlist Thumbnail Container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/thumbnailContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="16:9">

            <ImageView
                android:id="@+id/playlist_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                android:contentDescription="@string/playlist_thumbnail"
                tools:src="@tools:sample/backgrounds/scenic"/>

            <!-- Overlay Gradient for Better Badge Visibility -->
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bottom_gradient"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Playlist Icon Indicator -->
            <ImageView
                android:id="@+id/playlist_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_playlist"
                android:padding="6dp"
                android:background="@drawable/playlist_icon_background"
                app:tint="#FFFFFF"
                android:contentDescription="@string/playlist_indicator"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"/>

            <!-- Video Count Badge -->
            <LinearLayout
                android:id="@+id/item_count_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/count_background"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_playlist_play"
                    app:tint="#FFFFFF"
                    android:contentDescription="@null"/>

                <TextView
                    android:id="@+id/item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    tools:text="50 videos"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Playlist Info Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/thumbnailContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Channel Avatar -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/channel_avatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/CircularImageView"
                tools:src="@tools:sample/avatars"
                android:contentDescription="@string/channel_avatar"/>

            <!-- Title and Info Container -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/channel_avatar"
                app:layout_constraintEnd_toStartOf="@id/menuButton"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- Playlist Name -->
                <TextView
                    android:id="@+id/playlist_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:textColor="?android:textColorPrimary"
                    android:fontFamily="sans-serif-medium"
                    tools:text="Amazing Playlist with Very Long Title That Spans Multiple Lines"/>

                <!-- Channel Name -->
                <TextView
                    android:id="@+id/channel_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:textColor="?android:textColorSecondary"
                    tools:text="Channel Name"/>

                <!-- Playlist Type and Privacy Status (Optional) -->
                <LinearLayout
                    android:id="@+id/playlist_meta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/playlist_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="?android:textColorSecondary"
                        tools:text="Playlist"/>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/dot_separator"/>

                    <TextView
                        android:id="@+id/playlist_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="?android:textColorSecondary"
                        tools:text="Updated today"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Menu Button -->
            <ImageView
                android:id="@+id/menuButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_more_vert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/more_options"
                app:tint="?android:textColorSecondary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>