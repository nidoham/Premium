<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/youtube_background_black">

    <!-- Video Title & Meta Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/youtube_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Sample Video Title That Is Very Long And Continues Here" />

        <TextView
            android:id="@+id/txtMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/youtube_text_secondary"
            android:textSize="12sp"
            tools:text="1.2M views â€¢ 2 days ago" />

    </LinearLayout>

    <!-- Action Buttons Row -->
    <HorizontalScrollView
        android:id="@+id/actionButtonsScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:scrollbars="none"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Like Button -->
            <LinearLayout
                android:id="@+id/btnLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/action_button_background"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:paddingVertical="10dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:minWidth="80dp">

                <ImageView
                    android:id="@+id/imgLikeIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_thumb_up"
                    android:contentDescription="@string/play_pause_button"
                    app:tint="@color/youtube_icon_white" />

                <TextView
                    android:id="@+id/txtLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/youtube_text_primary"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:text="1.2K" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="12dp"
                    android:background="@color/youtube_divider" />

            </LinearLayout>

            <!-- Dislike Button -->
            <LinearLayout
                android:id="@+id/btnDislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/action_button_background"
                android:paddingHorizontal="16dp"
                android:layout_marginHorizontal="5dp"
                android:paddingVertical="10dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="-1dp">

                <ImageView
                    android:id="@+id/imgDislikeIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_thumb_down"
                    android:contentDescription="@string/play_pause_button"
                    app:tint="@color/youtube_icon_white" />

            </LinearLayout>

            <!-- Share Button -->
            <LinearLayout
                android:id="@+id/btnShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/action_button_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="5dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="8dp"
                android:minWidth="80dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_share"
                    android:contentDescription="@string/share"
                    app:tint="@color/youtube_icon_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/share"
                    android:textColor="@color/youtube_text_primary"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Download Button -->
            <LinearLayout
                android:id="@+id/btnDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/action_button_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:layout_marginHorizontal="5dp"
                android:focusable="true"
                android:layout_marginStart="8dp"
                android:minWidth="80dp">

                <ImageView
                    android:id="@+id/imgDownloadIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_download"
                    android:contentDescription="@string/download"
                    app:tint="@color/youtube_icon_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/download"
                    android:textColor="@color/youtube_text_primary"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Save/Playlist Button -->
            <LinearLayout
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/action_button_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginHorizontal="5dp"
                android:layout_marginStart="8dp"
                android:minWidth="80dp">

                <ImageView
                    android:id="@+id/imgSaveIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_bookmark"
                    android:contentDescription="@string/save"
                    app:tint="@color/youtube_icon_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/save"
                    android:textColor="@color/youtube_text_primary"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- More Options -->
            <LinearLayout
                android:id="@+id/btnMoreActions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/action_button_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:layout_marginHorizontal="5dp"
                android:focusable="true"
                android:layout_marginStart="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_more_horiz"
                    android:contentDescription="@string/settings_button"
                    app:tint="@color/youtube_icon_white" />

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/youtube_divider" />

    <!-- Channel Info Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/channelInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgChannelAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/channel_avatar"
            android:src="@drawable/ic_avatar_placeholder"
            app:shapeAppearanceOverlay="@style/CircularImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="@color/youtube_divider"
            app:strokeWidth="1dp" />

        <LinearLayout
            android:id="@+id/channelTextContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/imgChannelAvatar"
            app:layout_constraintBottom_toBottomOf="@id/imgChannelAvatar"
            app:layout_constraintStart_toEndOf="@id/imgChannelAvatar"
            app:layout_constraintEnd_toStartOf="@id/btnSubscribe">

            <TextView
                android:id="@+id/txtChannelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/youtube_text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Channel Name" />

            <TextView
                android:id="@+id/txtSubscriberCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/youtube_text_tertiary"
                android:textSize="11sp"
                tools:text="1.5M subscribers" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubscribe"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:minWidth="95dp"
            android:maxWidth="110dp"
            android:text="@string/subscribe"
            android:textColor="@color/youtube_white"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:paddingHorizontal="16dp"
            app:backgroundTint="@color/youtube_red_dark"
            app:cornerRadius="18dp"
            app:rippleColor="@color/youtube_ripple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/imgBellIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_notifications"
            android:contentDescription="@string/subscribe"
            android:visibility="gone"
            app:tint="@color/youtube_white"
            app:layout_constraintTop_toTopOf="@id/btnSubscribe"
            app:layout_constraintBottom_toBottomOf="@id/btnSubscribe"
            app:layout_constraintStart_toStartOf="@id/btnSubscribe"
            app:layout_constraintEnd_toStartOf="@id/txtSubscribeLabel"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/txtSubscribeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subscribe"
            android:textColor="@color/youtube_white"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/btnSubscribe"
            app:layout_constraintBottom_toBottomOf="@id/btnSubscribe"
            app:layout_constraintStart_toStartOf="@id/btnSubscribe"
            app:layout_constraintEnd_toEndOf="@id/btnSubscribe"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Expandable Description -->
    <LinearLayout
        android:id="@+id/descriptionContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="@drawable/description_background"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/youtube_text_primary"
            android:textSize="13sp"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="This is the video description that can be quite long and will show more when expanded..." />

        <TextView
            android:id="@+id/txtMoreDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/show_more"
            android:textColor="@color/youtube_text_primary"
            android:textSize="13sp"
            android:textStyle="bold"
            android:paddingVertical="4dp" />

    </LinearLayout>

    <!-- Comments Preview -->
    <LinearLayout
        android:id="@+id/commentsPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comments"
                android:textColor="@color/youtube_text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txtCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/youtube_text_secondary"
                android:textSize="12sp"
                tools:text="1,234" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_arrow_dropdown"
                android:contentDescription="@string/show_more"
                app:tint="@color/youtube_icon_grey" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/topCommentPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="top">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgCommentAvatar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/channel_avatar"
                android:src="@drawable/ic_avatar_placeholder"
                app:shapeAppearanceOverlay="@style/CircularImageView" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCommentAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/youtube_text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="@username" />

                <TextView
                    android:id="@+id/txtCommentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/youtube_text_primary"
                    android:textSize="12sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="This is a preview of the top comment..." />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Divider before suggested videos -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/youtube_background_grey" />

</LinearLayout>