<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/youtube_background_black">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingHorizontal="16dp"
		android:paddingTop="16dp"
		android:paddingBottom="12dp">

		<TextView
			android:id="@+id/txtTitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:lineSpacingExtra="2dp"
			android:maxLines="2"
			android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
			android:textColor="@color/youtube_text_primary"
			android:textSize="16sp"
			android:textStyle="bold"
			tools:text="Sample Video Title That Is Very Long And Continues Here" />

		<TextView
			android:id="@+id/txtMeta"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:textColor="@color/youtube_text_secondary"
			android:textSize="12sp"
			tools:text="1.2M views â€¢ 2 days ago" />

	</LinearLayout>

	<HorizontalScrollView
		android:id="@+id/actionButtonsScroll"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingHorizontal="12dp"
		android:paddingVertical="8dp"
		android:scrollbars="none"
		android:fillViewport="false">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_vertical">

			<LinearLayout
				android:id="@+id/btnLike"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:background="@drawable/action_button_background"
				android:paddingStart="16dp"
				android:paddingEnd="12dp"
				android:paddingVertical="10dp"
				android:gravity="center_vertical"
				android:clickable="true"
				android:focusable="true"
				android:minWidth="80dp">

				<ImageView
					android:id="@+id/imgLikeIcon"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:src="@drawable/ic_thumb_up"
					android:contentDescription="@string/play_pause_button"
					app:tint="@color/youtube_icon_white" />

				<TextView
					android:id="@+id/txtLikeCount"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:textColor="@color/youtube_text_primary"
					android:textSize="13sp"
					android:textStyle="bold"
					tools:text="1.2K" />

				<android.view.View
					android:layout_width="1dp"
					android:layout_height="18dp"
					android:layout_marginStart="12dp"
					android:background="@color/youtube_divider" />

			</LinearLayout>

			<LinearLayout
				android:id="@+id/btnDislike"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:background="@drawable/action_button_background"
				android:paddingHorizontal="16dp"
				android:layout_marginHorizontal="5dp"
				android:paddingVertical="10dp"
				android:gravity="center_vertical"
				android:clickable="true"
				android:focusable="true"
				android:layout_marginStart="-1dp">

				<ImageView
					android:id="@+id/imgDislikeIcon"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:src="@drawable/ic_thumb_down"
					android:contentDescription="@string/play_pause_button"
					app:tint="@color/youtube_icon_white" />

			</LinearLayout>

			<LinearLayout
				android:id="@+id/btnShare"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:background="@drawable/action_button_background"
				android:paddingHorizontal="16dp"
				android:paddingVertical="10dp"
				android:layout_marginHorizontal="5dp"
				android:gravity="center_vertical"
				android:clickable="true"
				android:focusable="true"
				android:layout_marginStart="8dp"
				android:minWidth="80dp">

				<ImageView
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:src="@drawable/ic_share"
					android:contentDescription="@string/share"
					app:tint="@color/youtube_icon_white" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:text="@string/share"
					android:textColor="@color/youtube_text_primary"
					android:textSize="13sp"
					android:textStyle="bold" />

			</LinearLayout>

			<LinearLayout
				android:id="@+id/btnDownload"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:background="@drawable/action_button_background"
				android:paddingHorizontal="16dp"
				android:paddingVertical="10dp"
				android:gravity="center_vertical"
				android:clickable="true"
				android:layout_marginHorizontal="5dp"
				android:focusable="true"
				android:layout_marginStart="8dp"
				android:minWidth="80dp">

				<ImageView
					android:id="@+id/imgDownloadIcon"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:src="@drawable/ic_download"
					android:contentDescription="@string/download"
					app:tint="@color/youtube_icon_white" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:text="@string/download"
					android:textColor="@color/youtube_text_primary"
					android:textSize="13sp"
					android:textStyle="bold" />

			</LinearLayout>

			<LinearLayout
				android:id="@+id/btnSave"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:background="@drawable/action_button_background"
				android:paddingHorizontal="16dp"
				android:paddingVertical="10dp"
				android:gravity="center_vertical"
				android:clickable="true"
				android:focusable="true"
				android:layout_marginHorizontal="5dp"
				android:layout_marginStart="8dp"
				android:minWidth="80dp">

				<ImageView
					android:id="@+id/imgSaveIcon"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:src="@drawable/ic_bookmark"
					android:contentDescription="@string/save"
					app:tint="@color/youtube_icon_white" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:text="@string/save"
					android:textColor="@color/youtube_text_primary"
					android:textSize="13sp"
					android:textStyle="bold" />

			</LinearLayout>

			<LinearLayout
				android:id="@+id/btnMoreActions"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:background="@drawable/action_button_background"
				android:paddingHorizontal="16dp"
				android:paddingVertical="10dp"
				android:gravity="center_vertical"
				android:clickable="true"
				android:layout_marginHorizontal="5dp"
				android:focusable="true"
				android:layout_marginStart="8dp">

				<ImageView
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:src="@drawable/ic_more_horiz"
					android:contentDescription="@string/settings_button"
					app:tint="@color/youtube_icon_white" />

			</LinearLayout>

		</LinearLayout>

	</HorizontalScrollView>

	<android.view.View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginTop="8dp"
		android:background="@color/youtube_divider" />

</LinearLayout>