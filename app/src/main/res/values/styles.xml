    <style name="Widget.App.Divider.Vertical" parent="Widget.App.Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <!-- ========================================= -->
    <!-- প্লেয়ার স্টাইল -->
    <!-- ========================================= -->
    
    <style name="Widget.App.Player" parent="">
        <item name="android:background">@color/md_theme_player_background</item>
    </style>
    
    <style name="Widget.App.Player.Button" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">@color/md_theme_player_controls</item>
        <item name="rippleColor">@color/md_theme_ripple</item>
    </style>
    
    <style name="Widget.App.Player.SeekBar" parent="">
        <item name="android:progressTint">@color/md_theme_player_progress</item>
        <item name="android:progressBackgroundTint">@color/md_theme_player_buffer</item>
