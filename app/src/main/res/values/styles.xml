        <item name="rippleColor">@color/md_theme_ripple</item>
    </style>
    
    <style name="Widget.App.FAB.Small" parent="Widget.Material3.FloatingActionButton.Small.Primary">
        <item name="backgroundTint">@color/md_theme_primary</item>
        <item name="tint">@color/md_theme_on_primary</item>
        <item name="android:elevation">6dp</item>
    </style>
    
    <style name="Widget.App.FAB.Extended" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="backgroundTint">@color/md_theme_primary</item>
        <item name="android:textColor">@color/md_theme_on_primary</item>
        <item name="iconTint">@color/md_theme_on_primary</item>
    </style>
    
    <!-- ========================================= -->
    <!-- শিমার লোডিং স্টাইল -->
    <!-- ========================================= -->
    
    <style name="Widget.App.Shimmer" parent="">
        <item name="android:background">@color/md_theme_shimmer_base</item>
    </style>
    
    <style name="Widget.App.Shimmer.Thumbnail" parent="Widget.App.Shimmer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
    </style>
    
    <style name="Widget.App.Shimmer.Text" parent="Widget.App.Shimmer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">16dp</item>
    </style>
    
    <!-- ========================================= -->
    <!-- ডিভাইডার স্টাইল -->
    <!-- ========================================= -->
    
    <style name="Widget.App.Divider" parent="Widget.Material3.MaterialDivider">
        <item name="android:background">@color/md_theme_divider</item>
